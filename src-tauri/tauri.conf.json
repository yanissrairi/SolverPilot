{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SolverPilot",
  "version": "0.1.0",
  "identifier": "dev.yaniss.solver-pilot",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SolverPilot",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
